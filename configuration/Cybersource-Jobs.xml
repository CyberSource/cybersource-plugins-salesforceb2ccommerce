                        <parameter name="paymentType">IDL</parameter>
                    </parameters>
                </step>
            </flow-template>
        </split>
        <rules/>
        <triggers>
            <run-once enabled="true">
                <date>2017-07-17Z</date>
                <time>10:20:57.000Z</time>
            </run-once>
        </triggers>
    </job>

</jobs>
