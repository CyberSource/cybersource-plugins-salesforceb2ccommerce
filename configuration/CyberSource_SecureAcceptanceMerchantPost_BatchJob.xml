<?xml version="1.0" encoding="UTF-8"?>
<schedules xmlns="http://www.demandware.com/xml/impex/schedules/2007-03-31">
    <schedule schedule-id="SecureAcceptanceMerchantPostJob">
        <description>CyberSource Secure Acceptance Order Post Job which are processed in cybersource but in CREATED state</description>
        <enabled-flag>true</enabled-flag>
        <execution-scope>site</execution-scope>
        <pipeline>
            <name>SECURE_ACCEPTANCE</name>
            <startnode>MerchantPostJob</startnode>
        </pipeline>
        <sites>
            <site site-id="SiteGenesis"/>
        </sites>
        <run-once>2015-02-24T11:32:00.000Z</run-once>
        <notification>
            <enabled-flag>true</enabled-flag>
            <email-from>anujjain@sapient.com</email-from>
            <email-to>ajain8@sapient.com</email-to>
            <threshold>
                <success/>
                <exception/>
                <error/>
                <hang/>
                <retry/>
            </threshold>
            <max-execution-time>60</max-execution-time>
            <hang-detection-enabled-flag>false</hang-detection-enabled-flag>
            <failure-rule>continue</failure-rule>
        </notification>
    </schedule>

</schedules>
