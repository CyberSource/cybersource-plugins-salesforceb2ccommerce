importScript('app_test:lib/TestSuiteBase.ds');
var Assert = require('/app_test/cartridge/scripts/lib/Assert'),
 TestCCAuth = require('/int_cybersource_pipelines/cartridge/scripts/unittesting/TestCCAuth.ds'),
 TestTax = require('/int_cybersource_pipelines/cartridge/scripts/unittesting/TestTax.ds');
var app = require('/app_storefront_controllers/cartridge/scripts/app');
var Logger = require('dw/system/Logger'); 
var Transaction = require('dw/system/Transaction');


function CyberSourceUnitTestSuite(){
	let suite = TestSuiteBase();
	//runs before each test
	suite.testSetup = function() {
		Logger.debug('testSetup called');
	};
	
	//runs after each test
	suite.testTearDown = function() {
		Logger.debug('testTearDown called');
	};
	
	suite.tests = [{
		'name': 'TestCCAuth',
		'category': 'Happy',
		'run': function () {
			//Arrange
			let decision = 'ACCEPT',
			actual;							
			//Act	
			actual = TestCCAuth.testCCAuth();
			//Assert
			Assert.areEqual(decision, actual.Decision);
		}
	},
	{
		'name': 'TestTax',
		'category': 'Happy',
		'run': function () {
			//Arrange
			let decision = 'ACCEPT',
			actual;							
			//Act	
			actual = TestTax.testTax();
			//Assert
			Assert.areEqual(decision, actual.Decision);
		}
	}
	];

	return suite;
}
module.exports = CyberSourceUnitTestSuite();