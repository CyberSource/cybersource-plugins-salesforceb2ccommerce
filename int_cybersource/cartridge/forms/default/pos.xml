<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
	
	<!-- Credit Card fields-->
	<field formid="accountNumber" type="string" mandatory="false" label="Credit Card No.:" max-length="16"/>
	<field formid="cardType" type="string" mandatory="false" label="Card Type:">
		<options>
			<option optionid="" 	label="forms.select" 	value=""/>
			<option optionid="VISA" label="001: Visa" value="001"/>
			<option optionid="Master Card" label="002: MasterCard" value="002"/>
			<option optionid="AMEX" label="003: American Express" value="003"/>
			<option optionid="DISCOVER" label="004: Discover" value="004"/>
			<option optionid="Maestro" label="005: Diners Club" value="005"/>
			<option optionid="Maestro" label="006: Carte Blanche" value="006"/>
			<option optionid="Maestro" label="007: JCB" value="007"/>
		</options>	
	</field>
	<field formid="expiryMonth" type="string" mandatory="false" label="Expiry Month:">
		<options>
			<option optionid="" 	label="forms.select" 	value=""/>
			<option optionid="1" label="01" value="01"/>
			<option optionid="2" label="02" value="02"/>
			<option optionid="3" label="03" value="03"/>
			<option optionid="4" label="04" value="04"/>
			<option optionid="5" label="05" value="05"/>
			<option optionid="6" label="06" value="06"/>
			<option optionid="7" label="07" value="07"/>
			<option optionid="8" label="08" value="08"/>
			<option optionid="9" label="09" value="09"/>
			<option optionid="10" label="10" value="10"/>
			<option optionid="11" label="11" value="11"/>
			<option optionid="12" label="12" value="12"/>
		</options>
	</field>
	<field formid="expiryYear" type="string" mandatory="false" label="Expiry Year:">
		<options>
			<option optionid="" 	label="forms.select" 	value=""/>
			<option optionid="2014" label="2014" value="2014"/>
			<option optionid="2015" label="2015" value="2015"/>
			<option optionid="2016" label="2016" value="2016"/>
			<option optionid="2017" label="2017" value="2017"/>
			<option optionid="2018" label="2018" value="2018"/>
			<option optionid="2019" label="2019" value="2019"/>
			<option optionid="2020" label="2020" value="2020"/>
			<option optionid="2021" label="2021" value="2021"/>
		</options>
	</field>
	<field formid="cvnNumber" type="string" mandatory="false" label="CVN:"/>
	
	
	<field formid="currency" type="string" mandatory="false" label="Currency:">
		<options>
			<option optionid="" 	label="forms.select" 	value=""/>
			<option optionid="USD" label="USD" value="USD"/>
		</options>
	</field>
	<field formid="amount" type="string" mandatory="true" label="Amount:"/>
	
	<field formid="storeLocation" type="string" mandatory="true" label="Store at:"/>
	
	<!-- POS fields -->
	<field formid="entryMode" type="string" mandatory="true" label="Entry Mode:">
		<options>	
			<option optionid="" 	label="forms.select" 	value=""/>
			<option optionid="swiped" 	label="swiped" 	value="swiped"/>
			<option optionid="keyed" 	label="keyed" 	value="keyed"/>
		</options>
	</field>
	
	<field formid="cardPresent" type="string" mandatory="true" label="Card Present:">
		<options>	
			<option optionid="" 	label="forms.select" 	value=""/>
			<option optionid="Y" 	label="Yes" 	value="Y"/>
			<option optionid="N" 	label="No" 	value="N"/>
		</options>
	</field>
	
	<field formid="catLevel" type="number" mandatory="false" label="Cat Level:">
		<options>	
			<option optionid="" 	label="forms.select" 	value=""/>
			<option optionid="1" 	label="1: Automated dispensing machine" 		value="1"/>
			<option optionid="2" 	label="2: Self-service terminal" 				value="2"/>
			<option optionid="3" 	label="3: Limited amount terminal" 				value="3"/>
			<option optionid="4" 	label="4: In-flight commerce (IFC) terminal"	value="4"/>
			<option optionid="5" 	label="5: Radio frequency device" 				value="5"/>
			<option optionid="6" 	label="6: Mobile acceptance terminal" 			value="6"/>
		</options>
	</field>
	
	<field formid="terminalCapability" type="number" mandatory="true" label="Terminal Capability:">
		<options>	
			<option optionid="" 	label="forms.select" 	value=""/>
			<option optionid="1" 	label="1: Terminal has a magnetic stripe reader only" 							value="1"/>
			<option optionid="2" 	label="2: Terminal has a magnetic stripe reader and manual entry capability"	value="2"/>
			<option optionid="3" 	label="3: Terminal has manual entry capability only." 							value="3"/>
		</options>
	</field>
	
	<field formid="terminalID" type="string" mandatory="false" label="Terminal ID:"/>

	<field formid="trackData" type="string" mandatory="false" label="Track Data:"/>
	
	<action formid="submit" label="forms.find" valid-form="true"/>
</form>