<?xml version="1.0" encoding="UTF-8" ?>
<?demandware-pipeline version="2.0"?>

<pipeline>
  <branch basename="Authorize">
    <segment>
      <node>
        <start-node name="Authorize" secure="true"/>
        <node-display x="1" y="1"/>
      </node>
      <simple-transition>
        <transition-display>
          <bend-point relative-to="source" x="0" y="1"/>
        </transition-display>
      </simple-transition>
      <node>
        <pipelet-node pipelet-name="Script" pipelet-set-identifier="bc_api">
          <config-property key="Transactional" value="false"/>
          <config-property key="OnError" value="PIPELET_ERROR"/>
          <config-property key="ScriptFile" value="cybersource/mobilepayments/ApplePay/StartMobilePayment.ds"/>
          <key-binding alias="logs" key="ScriptLog"/>
          <key-binding alias="OrderNo" key="OrderNo"/>
          <key-binding alias="ERRORCODE" key="ErrorCode"/>
          <key-binding alias="CardType" key="CardType"/>
          <key-binding alias="Cryptogram" key="Cryptogram"/>
          <key-binding alias="NetworkToken" key="NetworkToken"/>
          <key-binding alias="TokenExpirationMonth" key="TokenExpirationMonth"/>
          <key-binding alias="TokenExpirationYear" key="TokenExpirationYear"/>
          <key-binding alias="ERRORMSG" key="ErrorMsg"/>
          <key-binding alias="PaymentData" key="PaymentData"/>
          <key-binding alias="ServiceResponse" key="MobilePaymentOutput"/>
          <key-binding alias="ServiceResponse" key="ServiceResponse"/>
          <key-binding alias="ERRORCODE" key="ERRORCODE"/>
          <key-binding alias="ERRORMSG" key="ERRORMSG"/>
        </pipelet-node>
        <node-display x="0" y="1"/>
        <branch basename="b2" source-connector="error">
          <transition target-connector="in2" target-path="./+1">
            <transition-display>
              <bend-point relative-to="source" x="1" y="0"/>
              <bend-point relative-to="target" x="1" y="0"/>
            </transition-display>
          </transition>
        </branch>
      </node>
      <transition target-connector="in1" target-path="./+1"/>
    </segment>
    <segment>
      <node>
        <join-node/>
        <node-display x="0" y="1"/>
      </node>
      <simple-transition>
        <transition-display>
          <bend-point relative-to="source" x="0" y="1"/>
        </transition-display>
      </simple-transition>
      <node>
        <interaction-node transaction-required="false">
          <template buffered="true" dynamic="false" name="mobilepayment/mobilepaymentresponse"/>
        </interaction-node>
        <node-display x="0" y="1"/>
      </node>
    </segment>
  </branch>
</pipeline>
